{
  "publisher": "maxbublik",
  "name": "sdtt",
  "version": "0.0.3",
  "main": "dist/extension/main.js",
  "engines": {
    "vscode": "^1.60.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "sdtt.invoke",
        "title": "Stop debug and Terminate all tasks",
        "category": "Debug"
      }
    ]
  },
  "activationEvents": [
    "onCommand:sdtt.invoke"
  ],
  "scripts": {
    "build": "rm -rf ./dist && esbuild --outfile=./dist/extension/main.js --platform=node --bundle --external:vscode ./src/extension.ts"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxbublik/vscode-stop-debug-and-terminate-tasks.git"
  }
}
